{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "components/*" : ["./app/components/*"],
      "config/*" : ["./app/config/*"],
      "navigation/*" : ["./app/navigation/*"],
      "screens/*" : ["./app/screens/*"],
      "services/*" : ["./app/services/*"],
      "theme/*" : ["./app/theme/*"],
      "utils/*" : ["./app/utils/*"],
      "images/*" : ["./images/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "jest.config.js", "metro.config.js"],
  "include": ["index.js", "app", "test", "storybook"]
}
